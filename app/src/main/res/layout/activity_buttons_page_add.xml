<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ButtonsPageAddActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar19"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_to_do_today_label"
        android:textColor="@color/dark_tone_sportify"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar19"
        app:layout_constraintEnd_toEndOf="@+id/toolbar19"
        app:layout_constraintStart_toStartOf="@+id/toolbar19"
        app:layout_constraintTop_toTopOf="@+id/toolbar19" />

    <Button
        android:id="@+id/buttonsPageCreateEventBtn"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:text="@string/create_event_label"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar19" />

    <Button
        android:id="@+id/buttonsPageCreateGroupBtn"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:backgroundTint="@color/pink_sportify"
        android:text="@string/create_group_label"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonsPageCreateEventBtn" />

    <Button
        android:id="@+id/buttonsPageBookPlaceBtn"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:backgroundTint="@color/light_tone_sportify"
        android:text="@string/book_a_place_label"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonsPageCreateGroupBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>