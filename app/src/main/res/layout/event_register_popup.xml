<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:id="@+id/dialogue_root_element"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <TextView
            android:id="@+id/levelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="How would you like to participate?"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/black" android:textSize="18sp"
            android:textStyle="bold"/>

    <Button
            android:id="@+id/playerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="As player"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/levelLabel" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:onClick="registerAsPlayer"/>
    <Button
            android:id="@+id/guestButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="As spectator"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/playerButton"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            android:onClick="registerAsSpectator"/>
</androidx.constraintlayout.widget.ConstraintLayout>
