<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsFeedActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar14"
        android:layout_width="410dp"
        android:layout_height="72dp"
        android:background="@color/pink_sportify"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/feedSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:backgroundTint="@color/pink_sportify"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar14"
        app:srcCompat="@drawable/ic_search" />

    <ImageButton
        android:id="@+id/feedAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:backgroundTint="@color/pink_sportify"
        app:layout_constraintBottom_toBottomOf="@+id/feedSearchButton"
        app:layout_constraintStart_toEndOf="@+id/feedSearchButton"
        app:layout_constraintTop_toTopOf="@+id/feedSearchButton"
        app:srcCompat="@drawable/ic_add" />

    <ImageButton
        android:id="@+id/feedChatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:backgroundTint="@color/pink_sportify"
        app:layout_constraintBottom_toBottomOf="@+id/feedAddButton"
        app:layout_constraintStart_toEndOf="@+id/feedAddButton"
        app:layout_constraintTop_toTopOf="@+id/feedAddButton"
        app:srcCompat="@drawable/ic_message" />

    <ImageButton
        android:id="@+id/feedProfileButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/feedChatButton"
        app:layout_constraintEnd_toEndOf="@+id/toolbar14"
        app:layout_constraintStart_toEndOf="@+id/feedChatButton"
        app:layout_constraintTop_toTopOf="@+id/feedChatButton"
        app:srcCompat="@drawable/ana_profile_picture" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newsFeedRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/light_grey_sportify"
        android:backgroundTint="@color/light_grey_sportify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar14" />

</androidx.constraintlayout.widget.ConstraintLayout>