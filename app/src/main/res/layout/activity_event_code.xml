<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/textViewTitle2" android:textColor="@color/white"
            android:textStyle="bold" android:textAlignment="textEnd" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:background="@color/dark_tone_sportify" android:textSize="20sp"
            android:paddingTop="20dp" android:text="@string/check_in_received"
            android:paddingEnd="16dp"/>
    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/ic_arrow" android:id="@+id/imageButton11"
            android:tint="@color/white" android:backgroundTint="@color/dark_tone_sportify" android:rotation="180"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:scaleType="fitCenter"
            android:onClick="onBackPressed"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="85dp"
            android:layout_height="79dp" android:id="@+id/imageView16"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" app:layout_constraintTop_toBottomOf="@+id/textViewTitle2"
            android:layout_marginTop="40dp" android:src="@drawable/event_picture"/>
    <TextView
            android:text="11 Nov 2020 5:30PM - 6:00PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView19"
            app:layout_constraintStart_toEndOf="@+id/imageView16" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageView16"/>
    <TextView
            android:text="Yoga and Meditation for Beginners"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView21"
            android:textColor="@color/black" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageView16" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView19" android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/textView19" app:layout_constraintHorizontal_bias="0.761"
    />
    <Button
            android:text="@string/done_label"
            android:layout_width="0dp"
            android:layout_height="60dp" android:id="@+id/button8"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp" app:cornerRadius="20dp"
            android:onClick="onBackPressed"/>
    <ImageView
            android:layout_width="314dp"
            android:layout_height="302dp" app:srcCompat="@drawable/qr_code" android:id="@+id/imageView18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView21"
            android:layout_marginTop="32dp" android:layout_marginEnd="24dp" android:layout_marginStart="24dp"/>
    <TextView
            android:text="1574"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView22"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView18" android:layout_marginTop="32dp"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            android:textColor="@color/dark_tone_sportify" android:textStyle="bold" android:textSize="36sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>