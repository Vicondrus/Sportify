<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uid.project.sportify">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sportify">
        <activity android:name=".EventPhotosActivity"/>
        <activity android:name=".EventPageUserActivity" />
        <activity android:name=".EditEventActivity" />
        <activity android:name=".MapViewEventActivity" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity android:name=".SearchUserActivity" />
        <activity android:name=".AudioVideoCallActivity" />
        <activity android:name=".ButtonsPageAddActivity" />
        <activity android:name=".FriendListActivity" />
        <activity android:name=".PaymentActivity" />
        <activity android:name=".NewsFeedActivity"/>
        <activity android:name=".PlacesResultActivity"/>
        <activity android:name=".BookPlaceActivity"/>
        <activity android:name=".ProfilePageActivity" />
        <activity android:name=".CreateGroupActivity" />
        <activity android:name=".CreateEventActivity" />
        <activity android:name=".EventCreatedActivity" />
        <activity android:name=".ChatMainActivity" />
        <activity android:name=".ChatFriendActivity" />
        <activity android:name=".EventPageOrganizerActivity" />
        <activity android:name=".PlaceBookedActivity" />
        <activity android:name=".ButtonsPageSearchActivity" />
        <activity android:name=".SportSelectionEvent" />
        <activity android:name=".EventResultActivity" />
        <activity android:name=".TagsEventSearch" />
        <activity android:name=".SearchEventActivity" />

        <activity android:name=".CalendarActivity" />
        <activity android:name=".SportsSelectionActivity" />

        <activity android:name=".UserResultActivity" />

        <activity
            android:name=".LevelPopupActivity"
            android:parentActivityName=".SportsSelectionActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert" />
        <activity
            android:name=".MapViewDemoActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".CustomizeProfileActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />


        <activity android:name=".VerificationCodeActivity"/>
        <activity android:name=".ViewEventCodeActivity"/>
        <activity android:name=".ScanActivity"/>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GroupCreatedActivity" />
        <activity android:name=".LevelsEventActivity"/>
        <activity android:name=".TermsAndConditionsActivity"/>
        <activity android:name=".ActivityRegisterConfirmation"/>
        <activity
            android:name=".EventRegisterPopupActivity"
            android:parentActivityName=".EventPageOrganizerActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert" />


    </application>

</manifest>